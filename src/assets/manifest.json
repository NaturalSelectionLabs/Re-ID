{
    "manifest_version": 3,
    "name": "Re: ID",
    "version": "0.0.1",

    "description": "This is Re: ID",

    "author": "NaturalSelectionLabs",
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["https://twitter.com/*"],
        "js": ["content-script.js"]
    }],
    "homepage_url": "https://rss3.io/",
    "permissions": ["tabs"],
    "host_permissions": [
        "https://twitter.com/*",
        "https://mobile.twitter.com/*"
    ]
}